<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*pilot_logbook</name>
        <declaration>
            <field>
              <name>id</name>
              <type>integer</type>
              <notnull>true</notnull>
              <autoincrement>true</autoincrement>
              <unsigned>true</unsigned>
              <primary>true</primary>
              <length>8</length>
            </field>
	    <field>
              <name>user_id</name>
              <type>text</type>
              <length>200</length>
              <default></default>
              <notnull>true</notnull>
            </field>
            <field>
              <name>date</name>
              <type>date</type>
              <notnull>true</notnull>
            </field>
            <field>
              <name>aircraft</name>
              <type>text</type>
	      <length>255</length>
              <default></default>
              <notnull>true</notnull>
            </field>
	    <field>
              <name>tailNumber</name>
              <type>text</type>
	      <length>10</length>
              <default></default>
              <notnull>true</notnull>
            </field>
	    <field>
              <name>departurePoint</name>
              <type>text</type>
	      <length>10</length>
              <default></default>
              <notnull>true</notnull>
            </field>
	    <field>
              <name>arrivalPoint</name>
              <type>text</type>
	      <length>10</length>
              <default></default>
              <notnull>true</notnull>
            </field>
	    <!-- Single Engine Land -->
	    <field>
	      <name>sel</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>false</notnull>
	    </field>
	    <!-- Multiengine Land -->
	    <field>
	      <name>mel</name>
     	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>false</notnull>
	    </field>
	    <field>
	      <name>rotorcraft</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>>
	      <notnull>false</notnull>
	    </field>
	    <!-- Type of Piloting Time -->
	    <field>
	      <name>dualReceived</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>false</notnull>
	    </field>
	    <field>
	      <name>pilotInCommand</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>false</notnull>
	    </field>
	    <field>
	      <name>secondInCommand</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>false</notnull>
	    </field>
	    <field>
	      <name>asFlightInstructor</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>false</notnull>
	    </field>
	    <field>
	      <name>groundTrainer</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>false</notnull>
	    </field>

	    <!-- Conditions of Flight -->
	    <field>
	      <name>day</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>false</notnull>
	    </field>
	    <field>
	      <name>night</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>false</notnull>
	    </field>
	    <field>
	      <name>crossCountry</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>false</notnull>
	    </field>
	    <field>
	      <name>actualInstrument</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>false</notnull>
	    </field>
	    <field>
	      <name>simulatedInstrument</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>false</notnull>
	    </field>

	    <!-- Landings -->
	    <field>
	      <name>instrumentApproach</name>
	      <type>integer</type>
	      <unsigned>true</unsigned>
	      <notnull>false</notnull>
	    </field>
	    <field>
	      <name>dayLandings</name>
	      <type>integer</type>
	      <unsigned>true</unsigned>
	      <notnull>false</notnull>
	    </field>
	    <field>
	      <name>nightLandings</name>
	      <type>integer</type>
	      <unsigned>true</unsigned>
	      <notnull>false</notnull>
	    </field>

	    <!-- totals -->
	    <field>
	      <name>total</name>
	      <type>decimal</type>
	      <precision>5</precision>
	      <scale>1</scale>
	      <notnull>true</notnull>
	    </field>

	    <!-- CFI -->
	    <field>
              <name>cfiName</name>
              <type>text</type>
	      <length>255</length>
              <default></default>
              <notnull>false</notnull>
            </field>
	     <field>
              <name>cfiNumber</name>
              <type>text</type>
	      <length>100</length>
              <default></default>
              <notnull>false</notnull>
            </field>

	    <field>
              <name>notes</name>
              <type>text</type>
	      <length>1500</length>
              <default></default>
              <notnull>false</notnull>
            </field>
        </declaration>
    </table>
</database>
